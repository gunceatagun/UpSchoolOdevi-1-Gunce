<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewAdSoyad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adınız Soyadınız: "
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        android:textSize="16dp"
        android:textStyle="italic|bold" />

    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        app:layout_constraintTop_toBottomOf="@+id/textViewAdSoyad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        android:textSize="16dp"
        android:textStyle="italic|bold" />

    <TextView
        android:id="@+id/textViewTelefon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telefon:"
        app:layout_constraintTop_toBottomOf="@+id/textViewEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        android:textSize="16dp"
        android:textStyle="italic|bold" />

    <TextView
        android:id="@+id/textViewSehir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yaşadığınız şehir:"
        app:layout_constraintTop_toBottomOf="@+id/textViewTelefon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        android:textSize="16dp"
        android:textStyle="italic|bold" />

    <TextView
        android:id="@+id/textViewKediSevgisi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kedileri seviyosun"
        app:layout_constraintTop_toBottomOf="@+id/textViewSehir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        android:textSize="16dp"
        android:textStyle="italic|bold" />

    <TextView
        android:id="@+id/textViewKediAlerji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView 6"
        app:layout_constraintTop_toBottomOf="@+id/textViewKediSevgisi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        android:textSize="16dp"
        android:textStyle="italic|bold" />

    <TextView
        android:id="@+id/textViewKediSahiplenir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView 7"
        app:layout_constraintTop_toBottomOf="@+id/textViewKediAlerji"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="16dp"
        android:textStyle="italic|bold" />

</androidx.constraintlayout.widget.ConstraintLayout>